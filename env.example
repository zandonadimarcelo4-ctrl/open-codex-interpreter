# ============================================
# Open Codex Interpreter - Configuração
# ============================================

# ============================================
# Segurança
# ============================================
# Chaves secretas (serão geradas automaticamente se não fornecidas)
WEBUI_SECRET_KEY=
WEBUI_JWT_SECRET_KEY=

# ============================================
# Servidor
# ============================================
HOST=0.0.0.0
PORT=8080
UVICORN_WORKERS=1

# ============================================
# Banco de Dados
# ============================================
# SQLite (padrão para desenvolvimento)
DATABASE_URL=sqlite:///./data/webui.db

# PostgreSQL (produção)
# DATABASE_URL=postgresql://user:password@localhost:5432/open_codex

# MySQL (produção)
# DATABASE_URL=mysql://user:password@localhost:3306/open_codex

# ============================================
# Ollama (Modelos Locais)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_BASE_URL=http://localhost:11434/api
ENABLE_OLLAMA_API=True

# Modelo padrão do Ollama (que suporta function calling/tools)
# Opções:
#   - qwen2.5:14b (Recomendado - muito inteligente, suporta tools, bom em código)
#   - qwen2.5:32b (Mais inteligente, maior, suporta tools)
#   - qwen2.5:7b (Mais rápido, menor, suporta tools)
#   - llama3.2:3b (Menor, suporta tools)
DEFAULT_MODEL=qwen2.5:14b

# ============================================
# OpenAI (Opcional)
# ============================================
OPENAI_API_KEY=
ENABLE_OPENAI_API=False

# ============================================
# Open Interpreter
# ============================================
OPENINTERPRETER_MODE=local
OPENINTERPRETER_SANDBOX=false

# ============================================
# Logging
# ============================================
GLOBAL_LOG_LEVEL=INFO

# ============================================
# Ambiente
# ============================================
ENV=dev
NODE_ENV=development

# ============================================
# Recursos Opcionais
# ============================================
# Redis (opcional, para cache e sessões)
REDIS_URL=

# CUDA (para GPU, se disponível)
USE_CUDA_DOCKER=false

# Playwright (para web scraping)
WEB_LOADER_ENGINE=
PLAYWRIGHT_WS_URL=

# ============================================
# Configurações Avançadas
# ============================================
# Diretório de dados
DATA_DIR=./data

# Diretório de uploads
UPLOAD_DIR=./data/uploads

# Cache
CACHE_DIR=./data/cache

